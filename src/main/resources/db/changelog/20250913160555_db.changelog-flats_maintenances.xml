<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="20250913160555-1" author="Mihir Parikh">
        <createTable tableName="flats_maintenances">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="flat_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="maintenance_amount" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="paid_amount" type="DOUBLE">
                <constraints nullable="true"/>
            </column>
            <column name="maintenance_status" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="challan_number" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="paid_date" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="payment_mode" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="due_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="due_amount" type="DOUBLE">
                <constraints nullable="true"/>
            </column>
            <column name="maintenance_month" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="maintenance_year" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="total_maintenance_amount" type="DOUBLE">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
